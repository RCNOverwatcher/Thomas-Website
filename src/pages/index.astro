---
import "@/styles/globals.css";
import Layout from "../layouts/Layout.astro";
import Steam from "../components/Steam.astro";
import { Image } from "astro:assets";
import mountains from "../mountains.jpg"
---

<Layout title="Welcome to Hell">
  <nav class="bg-[#222b44] top-0 w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <img
              class="h-8 w-8"
              src="/"
              alt=" logo"
            />
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href="#" class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium">Home</a>
              <a href="#" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Music</a>
              <a href="#" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">About</a>
              <a href="#" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Contact</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <section class="flex flex-col items-center justify-center w-full h-full">
    <Image src={mountains} alt="Image of mountains in Austrian Alps" width={4000} height={1377} class="min-h-1/2"/>
    <section class="flex flex-wrap justify-center w-full min-h-screen">
      
      <Steam />
      </section>

  </section>
</Layout>
