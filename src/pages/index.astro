---
import "@/styles/globals.css";
import "@fontsource/ubuntu";
import Layout from "../layouts/Layout.astro";
import Steam from "../components/Steam.astro";
import { Image } from "astro:assets";
import mountains from "../mountains.jpg"
import mc_logo from "../mc_logo.jpg"
---

<Layout title="Welcome to Hell">
  <nav class="bg-[#000000] top-0 w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center h-16 justify-evenly">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <a href="/">
            <Image
              class="h-8 w-8 rounded-lg"
              src={mc_logo}
              alt="Logo of a minecraft character"
            />
          </a>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4 ">
              <a href="#" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-md font-medium hover:scale-[1.05] transition-transform duration-300 ease-in-out">Music</a>
              <a href="#" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-md font-medium hover:scale-[1.05] transition-transform duration-300 ease-in-out">About</a>
              <a href="#" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-md font-medium hover:scale-[1.05] transition-transform duration-300 ease-in-out">Contact</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <section class="flex flex-col items-center justify-center w-full h-full">
    <Image 
    src={mountains} alt="Image of mountains in Austrian Alps" width={4000} height={1377} class="lg:min-w-full min-w-[250%]"/>
    <section class="flex flex-wrap justify-center w-full min-h-screen">
      
      <Steam />
      </section>

  </section>
</Layout>

<style>
  * {
    font-family: "Ubuntu", sans-serif;
  }
</style>